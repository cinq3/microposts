<h1>プロフィール　編集</h1>

<div class="container-fluid">

<%= form_for @user, html: {class: 'form-horizontal'} do |f| %>
  <div class=" form-group">
    <label class="control-label col-xs-2" >名前:</label>
    <div class="col-xs-10">
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>
  <div class=" form-group">
    <label class="control-label col-xs-2" >メール</label>
    <div class="col-xs-10">
      <%= f.text_field :email, class: 'form-control' %>
    </div>
  </div>
  <div class=" form-group">
    <label class="control-label col-xs-2">パスワード</label>
    <div class="col-xs-5">
      <%= f.password_field :password, class: 'form-control' %>
    </div>
    <div class="col-xs-3">　
    </div>
  </div>
  <div class=" form-group">
    <label class="control-label col-xs-2">パスワード<br />(確認用）</label>
    <div class="col-xs-5">
      <%= f.password_field :password_confirmation, class: 'form-control' %>
    </div>
    <div class="col-xs-3">　
    </div>
  </div>
  <div class=" form-group">
    <label class="control-label col-xs-2">所在地</label>
    <div class="col-xs-10">
      <%= f.text_field :location, class: 'form-control' %>
    </div>
  </div>
  <div class=" form-group">
    <label class="control-label col-xs-2">自己紹介</label>
    <div class="col-xs-10">
      <%= f.text_area :description, class: 'form-control' %>
    </div>
  </div>

  
  <div class="form-group">
    <label class="control-label col-xs-2">誕生日</label>
     <div class="col-xs-8">
        <%=  f.date_select(
                      :birthdate,
                      use_month_numbers: true, # jan, febとかじゃなくて数字で月を表現
                      start_year:     1930, # 何年から表示させるか
                      end_year:       (Time.now.year), # 何年まで表示させるか
                      default:        Date.new(1989, 1, 1), # 最初に表示されている年月日
                      date_separator: '/', 
                      class: "form-control bootstrap-date")
        %>
    </div>
  </div>
  

  <div class=" form-group">
    <div class="col-xs-offset-6 col-xs-3">
      <%= f.submit "更新", class: "btn btn-large btn-primary" %>
    </div>
    <div class="col-xs-3">
      <%= link_to "キャンセル", current_user , class: "btn btn-large btn-default"  %>
      
    </div>
  </div>
<% end %>
</div>